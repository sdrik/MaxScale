[maxscale]
threads=###threads###
log_warning=1

[server1]
type=server
address=###node_server_IP_1###
port=###node_server_port_1###
protocol=MySQLBackend

[MySQL-Monitor]
type=monitor
module=mysqlmon
servers=server1
user=maxskysql
password=skysql
monitor_interval=1000

[Cache-local]
type=filter
module=cache
storage=storage_inmemory
cached_data=shared
invalidate=current

[RWS-Cache-local]
type=service
router= readwritesplit
servers=server1
user=maxskysql
password=skysql
filters=Cache-local

[RWS-Cache-local-Listener]
type=listener
service=RWS-Cache-local
protocol=MySQLClient
port=4006
